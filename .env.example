# Backend
INVOICING_APP_NAME=EROS Invoicing Web
INVOICING_API_PREFIX=/api/v1
# Legacy OpenClaw vars (supported for fallback compatibility)
OPENCLAW_ENABLED=false
OPENCLAW_DRY_RUN_DEFAULT=true
OPENCLAW_CHANNEL=email,sms,imessage
OPENCLAW_API_BASE_URL=
OPENCLAW_API_KEY=
OPENCLAW_SENDER_TYPE=stub
OPENCLAW_TIMEOUT_SECONDS=30
# Preferred notifier vars
NOTIFIER_ENABLED=false
NOTIFIER_DRY_RUN_DEFAULT=true
NOTIFIER_CHANNEL=email,sms,imessage
NOTIFIER_API_BASE_URL=
NOTIFIER_API_KEY=
NOTIFIER_SENDER_TYPE=stub
NOTIFIER_TIMEOUT_SECONDS=30
REMINDER_LIVE_REQUIRES_IDEMPOTENCY=true
REMINDER_RUN_LIMIT_MAX=100
REMINDER_ALLOW_LIVE_NOW_OVERRIDE=false
REMINDER_TRIGGER_RATE_LIMIT_MAX=10
REMINDER_TRIGGER_RATE_LIMIT_WINDOW_SECONDS=60
REMINDER_STORE_BACKEND=inmemory
# Conversation pipeline
CONVERSATION_ENABLED=true
CONVERSATION_AUTOREPLY_ENABLED=false
CONVERSATION_STORE_BACKEND=inmemory
CONVERSATION_CONFIDENCE_THRESHOLD=0.78
CONVERSATION_MAX_AUTO_REPLIES=3
CONVERSATION_WEBHOOK_SIGNATURE_MODE=log_only
CONVERSATION_WEBHOOK_MAX_AGE_SECONDS=300
# Provider ingress defaults to disabled; enable only the providers you use.
CONVERSATION_PROVIDER_TWILIO_ENABLED=false
CONVERSATION_PROVIDER_SENDGRID_ENABLED=false
CONVERSATION_PROVIDER_BLUEBUBBLES_ENABLED=false
# Required only when the matching provider is enabled and signature mode is enforce.
TWILIO_AUTH_TOKEN=
SENDGRID_INBOUND_SECRET=
BLUEBUBBLES_WEBHOOK_SECRET=
# Payment routing
PAYMENTS_PROVIDER=stub
PAYMENTS_PROVIDER_NAME=eros_stub
AGENCY_SETTLEMENT_ACCOUNT_LABEL=agency-main
PAYMENT_WEBHOOK_SIGNATURE_MODE=log_only
PAYMENT_WEBHOOK_SIGNATURE_MAX_AGE_SECONDS=300
PAYMENT_WEBHOOK_SECRET_DEFAULT=
PAYMENT_WEBHOOK_SECRET_STRIPE=
PAYMENT_WEBHOOK_SECRET_PLAID=
# Auth storage (passkeys + rate limiting)
AUTH_STORE_BACKEND=inmemory
# Postgres example: postgresql+psycopg://user:pass@localhost:5432/invoicing_web
DATABASE_URL=
CREATOR_MAGIC_LINK_SECRET=change-me
CREATOR_PORTAL_BASE_URL=http://localhost:3000/creator
TRUST_PROXY_HEADERS=false
# Comma-separated list of proxy source IPs allowed to supply X-Forwarded-For.
TRUSTED_PROXY_IPS=127.0.0.1

# Auth
ADMIN_PASSWORD=change-me-in-production
ADMIN_SESSION_SECRET=change-me-in-production
CREATOR_SESSION_SECRET=change-me-in-production
CREATOR_SESSION_TTL_MINUTES=120
COOKIE_SECURE=false
BROKER_TOKEN_SECRET=change-me-in-production
BROKER_TOKEN_DEFAULT_TTL_MINUTES=60
BROKER_TOKEN_MAX_TTL_MINUTES=480
RUNTIME_SECRET_GUARD_MODE=warn

# Frontend (Next.js server env)
INVOICING_API_BASE_URL=http://localhost:8000
